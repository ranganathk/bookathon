<h1><%= @book.title %></h1>
<h4><%= @book.description %></h4>
<% @book.chapters.each do |chapter| %>
  <h3><%= link_to chapter.title, book_chapter_path(@book, chapter) %></h3>
<% end %>
<%= link_to "Edit Book", edit_book_path(@book), class: "btn btn-primary" %>
<%= link_to "Delete Book", book_path(@book), method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure you want to delete this book and all its related chapters.' } %>
<%= link_to "Add Chapter", new_book_chapter_path(@book), class: "btn btn-primary" %>


